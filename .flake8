[flake8]
max-line-length = 100
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# W504: line break after binary operator
ignore = E203,E501,W503,W504
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*.py:S101
max-complexity = 12
